{
    "author": "Andrew Abramov <andrewblond@yandex.com>",
    "description": "BEMXJST support for ENB.",
    "name": "enb-bemxjst",
    "version": "0.1.0",
    "repository": "git://github.com/enb-make/enb-bemxjst",
    "homepage": "https://github.com/enb-make/enb-bemxjst",
    "bugs": "https://github.com/enb-make/enb-bemxjst/issues",
    "licenses": [{
        "type": "MIT",
        "url": "https://github.com/enb-make/enb-bemxjst/blob/master/LICENSE"
    }],
    "contributors": [
        {
            "name": "Andrew Abramov",
            "email": "andrewblond@yandex.com"
        },
        {
            "name": "Marat Dulin",
            "email": "mdevils@yandex.ru"
        }
    ],
    "engines": {
        "node": ">= 0.8.0"
    },
    "peerDependencies": {
        "enb": ">= 0.8.22"
    },
    "dependencies": {
        "vow": ">= 0.3.10",
        "sibling": ">= 0.1.1",
        "bem-core": "git://github.com/bem/bem-core.git#v1",
        "bemhtml-compat": ">= 0.0.10"
    },
    "devDependencies": {
        "enb": ">= 0.8.22",
        "mocha": "1.12.0",
        "chai": "1.7.2",
        "jshint": "2.1.10",
        "jscs": "1.0.4"
    },
    "scripts": {
        "test": "make validate",
        "lint": "make lint",
        "clean": "make clean",
        "func-test": "npm run-script build-bemhtml && npm run-script build-bemhtml-old && npm run-script build-bemtree && npm run-script build-bemtree-old && ./node_modules/.bin/mocha -u bdd -R spec --recursive test/func",
        "build-bemhtml": "cd test/fixtures/bemhtml && YENV=development ../../../node_modules/.bin/enb make --no-cache",
        "build-bemhtml-old": "cd test/fixtures/bemhtml-old && YENV=development ../../../node_modules/.bin/enb make --no-cache",
        "build-bemtree": "cd test/fixtures/bemtree && YENV=development ../../../node_modules/.bin/enb make --no-cache",
        "build-bemtree-old": "cd test/fixtures/bemtree-old && YENV=development ../../../node_modules/.bin/enb make --no-cache",
        "clean-build": "npm run-script clean-build-bemhtml && npm run-script clean-build-bemhtml-old && npm run-script clean-build-bemtree && npm run-script clean-build-bemtree-old",
        "clean-build-bemhtml": "cd test/fixtures/bemhtml && ../../../node_modules/.bin/enb make clean",
        "clean-build-bemhtml-old": "cd test/fixtures/bemhtml-old && ../../../node_modules/.bin/enb make clean",
        "clean-build-bemtree": "cd test/fixtures/bemtree && ../../../node_modules/.bin/enb make clean",
        "clean-build-bemtree-old": "cd test/fixtures/bemtree-old && ../../../node_modules/.bin/enb make clean"
    }
}
